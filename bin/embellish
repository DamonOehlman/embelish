#!/usr/bin/env node
const path = require('path');
const fs = require('fs');
const { embelish } = require('..');

const filename = path.resolve(process.argv[2]);

embelish({ filename }).then(content => {
  fs.writeFile(filename, content, 'utf-8', (err) => {
    if (err) {
      console.error(err);
    }

    console.log('done');
  });
});
